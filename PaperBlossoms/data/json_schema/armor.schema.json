{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Armor",
    "description": "List of armor",
    "type": "array",
    "items": {
        "description": "Armor",
        "type": "object",
        "properties": {
            "name": {
                "description": "Name of armor",
                "type": "string"
            },
            "reference": {
                "description": "Page reference for armor",
                "type": "object",
                "properties": {
                    "book": {
                        "description": "Book in which reference can be found",
                        "type": "string",
                        "enum": [
                            "CR",
                            "CoS",
                            "Core",
                            "DT",
                            "EE",
                            "FoV",
                            "GMK",
                            "Mantis",
                            "PoW",
                            "SL"
                        ]
                    },
                    "page": {
                        "description": "Page on which reference can be found",
                        "type": "integer"
                    }
                },
                "required": [
                    "book",
                    "page"
                ],
                "defaultSnippets": [
                    {
                        "label": "New Page reference for armor",
                        "body": {
                            "book": "$1",
                            "page": "^$2"
                        }
                    }
                ]
            },
            "resistance_values": {
                "description": "List of resistance values",
                "type": "array",
                "default": [],
                "items": {
                    "description": "Resistance value",
                    "type": "object",
                    "properties": {
                        "category": {
                            "description": "Resistance value category",
                            "type": "string",
                            "enum": [
                                "Physical",
                                "Supernatural"
                            ]
                        },
                        "value": {
                            "description": "Resistance numeric value",
                            "type": "integer"
                        }
                    },
                    "required": [
                        "category",
                        "value"
                    ],
                    "defaultSnippets": [
                        {
                            "label": "New Resistance value",
                            "body": {
                                "category": "$1",
                                "value": "^$2"
                            }
                        }
                    ]
                }
            },
            "qualities": {
                "description": "List of armor qualities",
                "type": "array",
                "default": [],
                "items": {
                    "description": "Armor quality",
                    "type": "string",
                    "enum": [
                        "Ceremonial",
                        "Concealable",
                        "Cumbersome",
                        "Damaged",
                        "Destroyed",
                        "Durable",
                        "Forbidden",
                        "Mundane",
                        "Prepare",
                        "Razor-edged",
                        "Resplendent",
                        "Sacred",
                        "Snaring",
                        "Subtle",
                        "Unholy",
                        "Wargear"
                    ]
                }
            },
            "rarity": {
                "description": "Rarity level",
                "type": "integer"
            },
            "price": {
                "description": "Price of armor",
                "type": "object",
                "properties": {
                    "value": {
                        "description": "Numeric value",
                        "type": "integer"
                    },
                    "unit": {
                        "description": "Monetary unit",
                        "type": "string",
                        "enum": [
                            "bu",
                            "koku",
                            "zeni"
                        ]
                    }
                },
                "required": [
                    "value",
                    "unit"
                ],
                "defaultSnippets": [
                    {
                        "label": "New Price of armor",
                        "body": {
                            "value": "^$1",
                            "unit": "$2"
                        }
                    }
                ]
            }
        },
        "required": [
            "name",
            "reference",
            "resistance_values",
            "qualities",
            "rarity",
            "price"
        ],
        "defaultSnippets": [
            {
                "label": "New Armor",
                "body": {
                    "name": "$1",
                    "reference": "^$2",
                    "resistance_values": "^[$3]",
                    "qualities": "^[$4]",
                    "rarity": "^$5",
                    "price": "^$6"
                }
            }
        ]
    }
}